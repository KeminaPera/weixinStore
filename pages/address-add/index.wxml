<view class="main">
  <view class='data'>
    <view class='item'>
      <text>联系人</text>
      <input type='text' value="{{name}}" bindinput="bindKeyName" placeholder='请输入姓名(必填)'></input>
    </view>
     <view class='item'>
      <text>手机号码</text>
      <input type='number' value="{{mobile}}" bindinput="bindKeyMobile"  placeholder='请输入11位手机号码(必填)'></input>
    </view>
     <view class='item'>
      <text>所在地区</text>
      <picker mode="region" bindchange="bindRegionChange" value="{{region}}">
        <view class="picker" >
          {{region[0]}} {{region[1]}} {{region[2]}}
        </view>
      </picker>
      <view class='icon'>
      <image src='/images/my_order.png'></image>
      </view>
    </view>
     <view class='item'>
      <text>详细地址</text>
      <input type='text' bindinput="bindKeyDetailed"  value="{{addr}}" placeholder='街道门牌号信息'></input>
    </view>
    <view class="item">
      <text>标签</text>
      <input type="" ></input>
    </view>
    <view class='item'>
      <text>默认地址</text>
      <switch bindchange="bindKeyDefaultAddr" value="{{defaultAddr}}"></switch>
    </view>
  </view>
  <view class='btn active' bindtap='submitFun'>保存</view>
</view>